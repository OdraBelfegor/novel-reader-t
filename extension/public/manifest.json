{
  "manifest_version": 3,
  "name": "NovelReader",
  "version": "1.0.0",
  "description": "Connects to NovelReader local server to provide content",
  "permissions": ["tabs", "storage", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
